[core]
    excludesfile = /home/sbo/.gitignore
    editor = vim
[alias]
    unstash = stash pop
    stat = status
    tree = log --graph --pretty=format:'%C(yellow)%h%Creset %ci %x1b[s%C(green)%an%Creset%x1b[u%x1b[10C%C(cyan)%d%Creset - %s'
    co = checkout
    vimdiff = difftool
    pick = cherry-pick -x
    sync = pull --rebase
    mine = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset' --author=Borini
    changes = show --pretty="format:" --name-only
[diff]
    tool = gvimdiff
[merge]
    tool = gvimdiff
[difftool]
    prompt = false
[color]
    diff = auto
    status = auto
    branch = auto
[push]
    default = tracking     
