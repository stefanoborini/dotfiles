[core]
	excludesfile = /Users/sborini/.gitignore
    editor = vim
[alias]
    unstash = stash pop
    stat = status
    tree = log --graph --pretty=format:'%C(yellow)%h%Creset %ci %x1b[s%C(green)%an%Creset%x1b[u%x1b[10C%C(cyan)%d%Creset - %s'
    co = checkout
    vimdiff = difftool
    pick = cherry-pick -x
    sync = pull --rebase
    mine = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset' --author=Borini
    changes = show --pretty="format:" --name-only
	heir = log --all --graph --decorate --oneline --simplify-by-decoration
    ush = push
    pish = push
    bracnh = branch
    branc = branch
    psh = push
    puh = push
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[difftool]
    prompt = false
[color]
    diff = auto
    status = auto
    branch = auto
[push]
    default = tracking     
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
